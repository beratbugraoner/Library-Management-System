@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h1>Kitap Listesi</h1>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
 {
    <div style="margin-bottom:15px; margin-top:15px;">
        <b>Aranacak Kitap Adını girin</b> <br /> @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </div>
 }


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kitap Kategorisi</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa Sayısı</th>
        <th>Kitap Durumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.kitapAd</td>
            <td>@k.TBLYAZAR.yazarAd&nbsp @k.TBLYAZAR.yazarSoyad</td>
            <td>@k.TBLKATEGORI.kategoriAd</td>
            <td>@k.basimYili</td>
            <td>@k.yayinEvi</td>
            <td>@k.sayfaSayisi</td>
            <td>@k.durum</td>
            <td><a href="/Kitap/KitapSil/@k.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success">Güncelle</a></td>


        </tr>
    }
</table>

<a href="/Kitap/KitapEkle" class="btn btn-primary">Yeni Kitap Ekle</a>